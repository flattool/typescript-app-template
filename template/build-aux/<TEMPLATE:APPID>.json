{
	"id": "<TEMPLATE:APPID>",
	"runtime": "org.gnome.Platform",
	"runtime-version": "<TEMPLATE:RUNTIME_VERSION>",
	"sdk": "org.gnome.Sdk",
	"sdk-extensions": ["org.freedesktop.Sdk.Extension.typescript"],
	"build-options": {
		"append-path": "/usr/lib/sdk/node20/bin:/usr/lib/sdk/typescript/bin"
	},
	"command": "<TEMPLATE:APPID>",
	"finish-args": ["--share=ipc", "--socket=fallback-x11", "--device=dri", "--socket=wayland"],
	"cleanup": [
		"/include",
		"/lib/pkgconfig",
		"/man",
		"/share/doc",
		"/share/gtk-doc",
		"/share/man",
		"/share/pkgconfig",
		"*.la",
		"*.a"
	],
	"modules": [
		{
			"name": "blueprint-compiler",
			"buildsystem": "meson",
			"sources": [
				{
					"type": "git",
					"url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
					"tag": "<TEMPLATE:BLUEPRINT_COMPILER_TAG>"
				}
			],
			"cleanup": ["*"]
		},
		{
			"name": "<TEMPLATE:APP_NAME>",
			"builddir": true,
			"buildsystem": "meson",
			"config-opts": ["-Dprofile=development"],
			"sources": [
				{
					"type": "dir",
					"path": "../"
				}
			]
		}
	]
}
