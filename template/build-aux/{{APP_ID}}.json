{
	"id": "{{APP_ID}}",
	"runtime": "org.gnome.Platform",
	"runtime-version": "{{RUNTIME_VERSION}}",
	"sdk": "org.gnome.Sdk",
	"sdk-extensions": ["org.freedesktop.Sdk.Extension.typescript", "org.freedesktop.Sdk.Extension.node20"],
	"build-options": {
		"append-path": "/usr/lib/sdk/node20/bin:/usr/lib/sdk/typescript/bin"
	},
	"command": "{{APP_ID}}",
	"finish-args": ["--share=ipc", "--socket=fallback-x11", "--device=dri", "--socket=wayland"],
	"cleanup": [
		"/include",
		"/lib/pkgconfig",
		"/man",
		"/share/doc",
		"/share/gtk-doc",
		"/share/man",
		"/share/pkgconfig",
		"*.la",
		"*.a"
	],
	"modules": [
		{
			"name": "blueprint-compiler",
			"buildsystem": "meson",
			"sources": [
				{
					"type": "git",
					"url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
					"tag": "{{BLUEPRINT_COMPILER_TAG}}"
				}
			],
			"cleanup": ["*"]
		},
		{
			"name": "{{APP_NAME}}",
			"builddir": true,
			"buildsystem": "meson",
			"config-opts": ["-Dprofile=development"],
			"sources": [
				{
					"type": "dir",
					"path": "../"
				}
			]
		}
	]
}
